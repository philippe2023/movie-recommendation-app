<!-- app/views/movies/show.html.erb -->

<div class="container mx-auto mt-10">
    <div class="flex flex-col md:flex-row">
        <% if @movie['Poster'] != 'N/A' %>
        <img src="<%= @movie['Poster'] %>" alt="<%= @movie['Title'] %>" class="w-full md:w-1/3 h-auto object-cover mb-4 md:mb-0 rounded-xl">
        <% end %>
        <div class="md:ml-6">
        <h1 class="text-3xl font-bold"><%= @movie['Title'] %></h1>
        <p class="text-gray-600"><%= @movie['Year'] %> | <%= @movie['Genre'] %></p>
        <p class="mt-4"><%= @movie['Plot'] %></p>
        <!-- Add more movie details as desired -->
        </div>
    </div>
</div>
